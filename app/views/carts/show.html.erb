<h1>Cart</h1>
<% if @cart_items.empty? %>
  <p>Your cart is empty.</p>
<% else %>
  <ul>
    <% @cart_items.each do |cart_item| %>
      <li>
        <%= cart_item.property.title %> - <%= number_to_currency(cart_item.property.price) %>
        <%= link_to 'Remove', cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Checkout', cart_path(@cart), method: :post %>
<% end %>
