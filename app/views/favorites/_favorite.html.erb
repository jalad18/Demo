<% favorite_properties.each do |property| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= property.name %></h5>
      <p class="card-text"><%= property.city %>, <%= property.country %></p>
      <%= link_to "Remove from Favorites", property_favorite_path(property), method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
<% end %>
