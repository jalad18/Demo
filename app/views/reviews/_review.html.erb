<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title text-danger" style="text-transform: capitalize;"><%= review.name %></h5>
    <p class="card-text" ><%= review.body %></p>
    <% if current_user.name == review.user.name || current_user.name == @property.user.name %>
      <%= button_to "Destroy Review", [review.property, review], method: :delete, class: "btn btn-danger btn-sm" %>
    <% end %>
  </div>
</div>
